<h1>Profile</h1>

<h2>Name is <%= @user.name %></h2>
<h2>Email is <%= @user.email %></h2>

<div class="col-md-6">
	<h2>Billing Addresses</h2>
	<%= link_to "Add", new_bill_address_path, class: 'btn btn-primary btn-xs' %>
	<% if !@user.bill_addresses.empty? %> 
		<ul>
			<% @user.bill_addresses.each do |bill| %>
				<li><%= bill.first_name %></li>
				<li><%= bill.last_name %></li>
				<li><%= bill.street_address_1 %></li>
				<li><%= bill.street_address_2 %></li>
				<li><%= bill.city %></li>
				<li><%= bill.country %></li>
				<li><%= bill.postcode %></li>
				<li><%= bill.phone %></li>
				<li><%= link_to "Edit", edit_bill_address_path(bill), class: 'btn btn-success btn-xs' %></li>
				<li><%= link_to 'Delete', bill_address_path(bill), method: :delete, confirm: 'Are you sure?', class:'btn btn-danger btn-xs' %></li>
				<br><br>
			<% end %>
		</ul>
	<% else %>
		<h4>No Bill Addresses Defined</h4>
	<% end %>
</div>

<div class="col-md-6">
	<h2>Delivery Addresses</h2>
	<%= link_to "Add", new_delivery_address_path, class: 'btn btn-primary btn-xs' %>
	<% if !@user.delivery_addresses.empty? %>
		<ul>
			<% @user.delivery_addresses.each do |delivery| %>
				<li><%= delivery.first_name %></li>
