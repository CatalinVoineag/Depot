<h1>Products</h1>

<% if policy(@products).create? %>
	<%= link_to "New Product", new_product_path, class: 'btn btn-primary' %>
<% end %>

<br><br>

<ul>
	<% @products.each do |product| %>
		<li><%= product.name %></li><br>
		<% if policy(@products).edit? %>
			<li><%= link_to "Edit", edit_product_path(product) %></li><br>
		<% end %>
		<li><%= product.description %></li><br>
		<li><%= number_to_currency(product.price) %></li><br><br>
	<% end %>
</ul>